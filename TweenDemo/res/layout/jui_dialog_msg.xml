<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="400dip"
    android:layout_height="wrap_content"
    android:background="@drawable/jui_dialog_response_bg"
    android:layout_gravity="bottom|center"
    android:orientation="vertical" 
    android:layout_marginBottom="200dp" >
<!-- 

     -->
    <ListView
        android:id="@+id/jui_msg_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dip" 
        android:divider="@color/list_divider"
        android:dividerHeight="1dp"
        android:footerDividersEnabled="true"        
        android:scrollbars="none"
        android:layoutAnimation="@anim/jui_anim_listview_layout"
         >
    </ListView>
     <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dip"
        >
    <LinearLayout 
        android:id="@+id/jui_layout_cancel"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="135dp" 
        android:gravity="center"
        >
         <Button
            android:id="@+id/jui_btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/jui_dialog_btn_cancel_bg"
            />
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dip"
            android:gravity="center"
            android:text="取消"
            android:textSize="12sp"
            android:textColor="@color/jui_dialog_btn_text_color"
            />
    </LinearLayout>

     <LinearLayout 
        android:id="@+id/jui_layout_huifu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"      
        android:layout_marginLeft="40dp"  
        >
           <Button
            android:id="@+id/jui_btn_huifu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"            
            android:background="@drawable/jui_dialog_btn_huifu_bg"
           />
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dip"
           	android:gravity="center"
            android:text="回复"
            android:textSize="12sp" 
            android:textColor="@color/jui_dialog_btn_text_color"
			/>
    </LinearLayout>
 </LinearLayout>
</LinearLayout>