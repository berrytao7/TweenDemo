<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/icon"
            android:layout_width="144dp"
            android:layout_height="144dp"
            android:background="@drawable/jui_account_icon_bg"
            android:src="@anim/jui_icon_anim" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/icon_bg"
            android:layout_width="144dp"
            android:layout_height="144dp"
            android:background="@drawable/jui_account_icon_bg"
            android:src="@drawable/jui_account_icon00" />
        <ImageView 
            android:id="@+id/icon2"
            android:layout_width="144dp"
            android:layout_height="144dp"
            android:visibility="gone"
            android:src="@drawable/jui_account_icon_light"/>
        <ImageView 
            android:id="@+id/icon21"
            android:layout_width="144dp"
            android:layout_height="144dp"
            android:visibility="gone"
            android:src="@drawable/jui_account_icon_light"/>
    </FrameLayout>

</LinearLayout>